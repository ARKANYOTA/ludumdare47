--update
function _update60() 
	--movement
	if btn(➡️) then
		vx+=1
	end
	if btn(⬅️) then
		vx-=1
	end
	if btn(⬆️) then
		vy+=1
	end
	if btn(⬇️) then
		vy-=1
	end
	x+=vx
	y-=vy
	vx=0
	vy=0
	if (x*16)>120 then
		cx =1
	else
		cx = 0
	end
	--camera
	camera(cx,cy)
end

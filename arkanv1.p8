function _update60() 
	--movement
	if btn(➡️) then
		x+=1
	end
	if btn(⬅️) then
		x-=1
	end
	if btn(⬆️) then
		y-=1
	end
	if btn(⬇️) then
		y+=1
	end
	
	if (x)-cx>120 then
		cx +=1
	end
	if (x)-cx<10 then
		cx -=1
	end
	if (y)-cy>120 then
		cy +=1
	end
	if (y)-cy<10 then
		cy -=1
	end
	
	--camera
	camera(cx,cy)
end
-->8
function _draw()
	cls()
	map(0,0)
	--sprite
	spr(1, x,y,1,1)
	if(bdebug) then debug() end
end
-->8
function debug()
		print("x: "..x,10+cx,16+cy,3)
		print("y: "..y,10+cx,22+cy,3)
		print("cx: "..cx,10+cx,28+cy,3)
		print("cy: "..cy,10+cx,34+cy,3)
end
